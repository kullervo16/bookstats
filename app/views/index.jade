doctype html
html(lang='en')
  include ./head.jade   
    
      
  body(role='document')
    // Fixed navbar
    .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          //a.navbar-brand(href='#') Bootstrap theme
        .navbar-collapse.collapse
          ul.nav.navbar-nav
            li.active
              a(href='#') Home
            li
              a(href='about') About
            li
              a(href='contact') Contact
            
        // /.nav-collapse
    .container.theme-showcase(role='main')
      // Main jumbotron for a primary marketing message or call to action
      .jumbotron
        h1 Jefs Book statistics
        
      h3
        |Click on the charts to apply filtering...
      div(class='container',style='font: 12px sans-serif;')
        div(class='row')
            div(class='span12')
                div(class='row')
                    div(class='span6', id='dc-books-chart')
                        h4
                            |Books per year (no filtering)

                    div(class='span6', id='dc-pages-chart')
                        h4
                            |Pages per year 
                div(class='row')
                    div(class='span4', id='dc-page-chart')
                        h4
                            |Pages per book 

                    div(class='span4', id='dc-genre-chart')
                        h4
                            |books per genre 
                    div(class='span4', id='dc-language-chart')
                        h4
                            |books per language 
                    div(class='span4', id='dc-rating-chart')
                        h4
                            |books per rating


                table(class='table table-hover',id='dc-table-graph')
                    thead
                        tr(class='header')
                            th
                                |Author
                            th 
                                |Title
                            th
                                |Genre
                            th
                                |Pages
                            th
                                |Read
                            th
                                |Rating
                            th
                                |Language
                            th
                                |LibraryThing
              
    // /container
    
    // Bootstrap core JavaScript
    // ==================================================
    // Placed at the end of the document so the pages load faster
    
    script(src='#{pathToAssets}/docs/assets/js/_vendor/holder.js')
