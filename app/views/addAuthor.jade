doctype html
html(lang='en')
  include ./head.jade   
  script(src='clientjs/addAuthor.js')  
      
  body(role='document',ng-app="addAuthor")
    // Fixed navbar
    .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          //a.navbar-brand(href='#') Bootstrap theme
        .navbar-collapse.collapse
          ul.nav.navbar-nav
            li
              a(href='/') Home
            li
              a(href='burndown') Burndown
            li
              a(href='authors') Authors
            li
              a(href='about') About
            li
              a(href='contact') Contact
            li
              a(href='read') Set read
            li
              a(href='add') Add book
            li.active
              a(href='addAuthor') Add author
            
        // /.nav-collapse
    .container.theme-showcase(role='main')
      // Main jumbotron for a primary marketing message or call to action
      .jumbotron
        h1 Jefs Book statistics
      h2
        |Add a new author
      div(ng-controller="addController")                              
            p
                input(type="text", placeholder="firstName", ng-model="firstName",title="firstName")                            
            p
                input(type="text", placeholder="name", ng-model="name",title="name")                   
            p
                button.btn(ng-click="update()",title="Update") Update
                
              
    // /container
    
    // Bootstrap core JavaScript
